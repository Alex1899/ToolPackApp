<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activities.sidebar.ui.addBuildingSite.AddBuildingSiteFragment">

    <ScrollView
        android:id="@+id/add_fragment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/frameLayout2"
                android:layout_width="417dp"
                android:layout_height="148dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="149dp"
                    android:contentDescription="@string/content_desc"
                    android:scaleType="fitXY"
                    android:src="@drawable/auth_header_image" />
            </FrameLayout>

            <TextView
                android:id="@+id/txtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/textview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frameLayout2" />

            <Spinner
                android:id="@+id/selectVendor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:autofillHints=""
                android:ems="10"
                android:prompt="@string/spinner_selectVendor"
                android:spinnerMode="dialog"
                app:layout_constraintBottom_toTopOf="@+id/selectDriver"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout2"
                app:layout_constraintVertical_bias="0.16" />

            <TextView
                android:id="@+id/txtSelectDriver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="select driver: "
                app:layout_constraintBottom_toTopOf="@+id/selectDriver"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/selectVendor" />

            <Spinner
                android:id="@+id/selectDriver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:autofillHints=""
                android:ems="10"
                android:prompt="@string/spinner_selectDriver"
                android:spinnerMode="dialog"
                app:layout_constraintBottom_toTopOf="@+id/selectBuildingsite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selectVendor"
                app:layout_constraintVertical_bias="0.16" />

            <TextView
                android:id="@+id/txtselectBuildingSite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="select building site: "
                app:layout_constraintBottom_toTopOf="@+id/selectBuildingsite"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/selectDriver" />

            <Spinner
                android:id="@+id/selectBuildingsite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:autofillHints=""
                android:ems="10"
                android:prompt="@string/spinner_selectBuildingsite"
                android:spinnerMode="dialog"
                app:layout_constraintBottom_toTopOf="@+id/Delivery_Date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selectDriver"
                app:layout_constraintVertical_bias="0.16" />

            <EditText
                android:id="@+id/Delivery_Date"
                android:layout_width="231dp"
                android:layout_height="42dp"
                android:layout_margin="20dp"
                android:layout_marginTop="20dp"
                android:autofillHints=""
                android:ems="10"
                android:editable="false"
                app:layout_constraintBottom_toTopOf="@+id/package_descripton"
                app:layout_constraintEnd_toStartOf="@+id/btn_date"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtselectBuildingSite"
                app:layout_constraintVertical_bias="0.16"
                tools:ignore="LabelFor" />

            <Button
                android:id="@+id/btn_date"
                android:layout_width="144dp"
                android:layout_height="45dp"
                android:text="SELECT DATE"
                app:layout_constraintBottom_toTopOf="@+id/package_descripton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.94"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtselectBuildingSite"
                app:layout_constraintVertical_bias="0.506" />

            <EditText
                android:id="@+id/Delivery_Time"
                android:layout_width="231dp"
                android:layout_height="42dp"
                android:layout_margin="20dp"
                android:layout_marginTop="20dp"
                android:autofillHints=""
                android:ems="10"
                android:editable="false"
                app:layout_constraintBottom_toTopOf="@+id/package_descripton"
                app:layout_constraintEnd_toStartOf="@+id/btn_date"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Delivery_Date"
                app:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/btn_time"
                android:layout_width="144dp"
                android:layout_height="45dp"
                android:text="SELECT Time"
                app:layout_constraintBottom_toTopOf="@+id/package_descripton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.94"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selectBuildingsite"
                app:layout_constraintVertical_bias="0.829" />

            <EditText
                android:id="@+id/package_descripton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:autofillHints="autofill"
                android:ems="10"
                android:hint="@string/packageDescripton"
                android:inputType="textLongMessage"
                app:layout_constraintBottom_toTopOf="@+id/button_addNewPackage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Delivery_Date"
                app:layout_constraintVertical_bias="0.16" />

            <Button
                android:id="@+id/button_addNewPackage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/button_addNewVendor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/package_descripton" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
